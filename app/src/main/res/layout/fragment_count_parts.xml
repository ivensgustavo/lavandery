<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CountPartsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_counter_parts"
        android:paddingStart="16dp"
        android:paddingTop="24dp"
        android:paddingEnd="16dp"
        android:paddingBottom="24dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/type_of_clotges"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agasalhos"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/price_per_piece"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R$ 5,00 /item"
                    android:textSize="14dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true">

                <Button
                    android:id="@+id/btn_decrement_item_qty"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    app:icon="@drawable/ic_add"
                    app:iconGravity="textEnd"
                    app:iconPadding="0dp"
                    app:iconSize="24dp" />

                <TextView
                    android:id="@+id/items_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_increment_item_qty"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    app:icon="@drawable/ic_remove"
                    app:iconGravity="textEnd"
                    app:iconPadding="0dp"
                    app:iconSize="24dp" />

            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>

</FrameLayout>